<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GridBGColor"
    android:orientation="vertical"
    tools:context="com.example.appjam2014.GridActivity" >

    <TextView
        android:id="@+id/MySentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:textStyle="bold"
        android:text="@string/MySentenceLabel"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/CurrentSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/UserSentenceLabel"
            android:textSize="25sp" />
    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/black" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/NextButton"
            style="@style/NextButtonText"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/nextbutton"
            android:text="@string/NextButtonLabel" />

        <TextView
            android:id="@+id/GridInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/NextButton"
            android:paddingLeft="5dp"
            android:text="@string/SentenceInstruction"
            android:textSize="15sp" />

    </RelativeLayout>

